{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build",
			"type": "shell",
			"command": "npm run build",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Minify CSS",
			"type": "shell",
			"command": "minifyall css/styles.css -s .min"
		},
		{
			"label": "Minify JS widget",
			"type": "shell",
			"linux": {"command": "node-minify --compressor terser --input js/widget.js --output widget.min.js"},
			"osx": {"command": "npx node-minify --compressor terser --input js/widget.js --output widget.min.js"}
		}
	]
}